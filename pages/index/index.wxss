/**index.wxss**/
page {
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
}

.section {
  width: 100%;
  border-radius: 0;
}

.userinfo {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  width: 100%;
}

.userinfo-avatar {
  width: 18%;
  border-radius: 50%;
  margin: 1%;
}

.icon {
  padding: 0 15rpx;
}

.filter {
  width: 76%;
  display: flex;
  justify-content: center;
  border: 1px solid red;
  border-radius: 10rpx;
  margin-top: 25rpx;
  margin-bottom: 5rpx;
}

.filter-text {
  text-align: center;
  color: red;
  padding: 5rpx 15rpx;
}

.filter-text-1 {
  width: 32%;
  border-right: 1px solid red;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.filter-text-2 {
  width: 36%;
}

.filter-text-3 {
  width: 32%;
  border-left: 1px solid red;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.filter-active {
  background-color: red;
  color: #fff;
}

.product {
  display: flex;
  align-content: center;
  width: 100%;
  background-color: #fff;
  padding: 20rpx 0;
  border-top: 1px solid #f5f5f5;
}

.product-img {
  /* width:160rpx;
  height:160rpx; */
  width: 24%;
  height: 160px;
  margin: 0 10rpx;
}

.price {
  color: red;
}

.product-operation {
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  width: 25%;
}

.product-operation button {
  margin: 5rpx 15rpx;
}

.product-content {
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  width: 50%;
}