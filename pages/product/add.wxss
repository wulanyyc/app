}

.interval {
  padding: 0 10rpx;
}

.express, .desc {
  padding: 10rpx 40rpx;
}

.arrow {
  width: 7px;
  height: 7px;
  border-top: 2px solid #ccc;
  border-right: 2px solid #ccc;
  transform: rotate(135deg);
}

.form-btn {
  width:50%;
  margin-left:25%;
  margin-top: 40rpx;
  margin-bottom: 100rpx;
}

.upload {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.textarea {
  flex-direction: column;
  align-items: flex-start;
}