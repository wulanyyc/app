<!--add.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">
<view class="container">
  <view class="section">
    <block wx:if="{{tempImgFiles.length == 0}}">
      <view class="upload">
        <button size="mini" type="default" bindtap='chooseImage'> <text class="add">+</text> 商品图片（限9张）</button>
      </view>
    </block>
    <block wx:else>
      <scroll-view scroll-x="true" style="white-space: nowrap; display: flex"> 
        <block wx:for="{{tempImgFiles}}" wx:key="*this">
          <image src="{{item}}" mode="aspectFill" style="width:200rpx;height:200rpx;padding:3px;" />
        </block>
      </scroll-view>
    </block>
  </view>

  <view class="section" style="margin-top:-18rpx;">
    <block wx:if="{{chooseImgFlag}}">
      <button size="mini" type="default" bindtap='chooseImage'>重新上传</button>
    </block>
  </view>

  <view class="section">
    <view class="section-title"><text class="red-text">*</text>商品名:</view>
    <input name="name" placeholder="限15个字" maxlength="15" />
  </view>

  <view class="section">
      <view class="section-title"><text class="red-text">*</text>价格:</view>
      <input adjust-position="true" name="price" type="digit" />
      <text class="interval">元</text>
  </view>

  <view class="section">
      <view class="section-title"><text class="red-text">*</text>佣金:</view>
      <input adjust-position="true" name="salary" type="digit" placeholder="代理成交后扣除" value="" />
      <text class="interval">元</text>
  </view>

  <view class="section textarea">
      <view class="section-title"><text class="red-text">*</text>商品介绍:</view>
      <textarea adjust-position="true" name="desc" class="desc" placeholder="限100个字" maxlength="100" />
  </view>

  <view class="section textarea">
      <view class="section-title"><text class="red-text">*</text>发货政策:</view>
      <textarea adjust-position="true" name="express" class="express" placeholder="限100个字" maxlength="100" />
  </view>

  <view class="section">
    <block wx:if="{{tempVedioFile == null}}">
      <view class="upload">
        <button size="mini" type="default" bindtap='chooseVedio'><text class="add">+</text> 视频秀（选填，限15秒内）</button>
      </view>
    </block>
    <block wx:else>
    <view style="width:100%;height:300rpx;display:flex;justify-content:center;align-items:center;flex-direction:row;">
      <video src="{{tempVedioFile}}" controls objectFit="fill" style="height: 225rpx;width:300rpx;margin-left:50rpx;"></video>
      <button size="mini" type="default" bindtap='chooseVedio' style="margin-right:100rpx;">重选视频</button>
    </view>
    </block>
  </view>

  <view class="btn-area" style="width:100%;">
      <button formType="submit" type="primary" class="form-btn">提交审核</button>
  </view>
</view>
</form>
